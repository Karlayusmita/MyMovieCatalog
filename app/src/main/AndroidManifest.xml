<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymoviecatalougesub5">

    <permission android:name="com.example.mymoviecatalougesub5.READ_DATABASE"
        android:protectionLevel="normal"/>
    <permission android:name="com.example.mymoviecatalougesub5.WRITE_DATABASE"
        android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.RemainderSettingsActivity"
            android:label="@string/title_activity_remainder_settings"/>
        <activity android:name=".activity.SearchTvShowActivity" />
        <activity android:name=".activity.SearchMovieActivity" />
        <activity android:name=".activity.DetailTvShowActivity" />
        <activity android:name=".activity.DetailMovieActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".widget.FavoriteBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_banner_widget_info" />
        </receiver>

        <service
            android:name=".widget.StackWidgetService"
            android:exported="true"
            android:enabled="true"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".widget.FavoriteBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_banner_widget_info"/>
        </receiver>

        <receiver
            android:name=".alarm.ReleaseAlarmReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <receiver android:name=".alarm.DailyAlarmReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>


    </application>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>